<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <style>
        body{
            margin:0;padding:0;
        }
        .red{
            color:pink;
            font-size:24px;
        }
        .ft-24{
            font-size:24px;
        }
        .tl{
            text-align:center;
        }
        .title{
            width:100%; 
            margin: 5px auto;
            font-size:20px; 
            color:#5f5e5e;
            text-align:center;
        }
        .font-15{
            font-size:15px;
        }
        .font-20{
            font-size:20px;
        }
        .font-22{
            font-size:22px;
        }
        .f5{
            color:#5f5e5e
        }
        .gray{
            color:#676767
        }
        .weather{
            display: flex;
            margin-top:5px;
            height: 30px;
            line-height: 30px;
            justify-content: space-around;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="title">
        <span class="">早安</span>
        <span>今天是我们在一起的第</span> <span class="red ft-24"> <%= lastDay %> </span><span>天</span>
    </div>
    <div style="margin: 0 auto;" class="tl f5">
        <div style="color:#676767;" class="font-20"><%= weatherTip %></div>
        <div style="margin:15px 0 15px 0;color:#676767;" class="font-15">近期天气预报</div>
        <% for(var j = 0; j<threeDaysData.length; j++) { %>
        <div class="weather">
            <div class="tl"><%= threeDaysData[j].Day %></div>
            <div class="tl">
                <img style="height:26px;width:26px;overflow: hidden;vertical-align:middle;" src='<%= threeDaysData[j].WeatherImgUrl %>' alt="">
                <span><%= threeDaysData[j].WeatherText %></span>
            </div>
            <div class="tl"><%= threeDaysData[j].Temperature %></div>

            <% if (threeDaysData[j].PollutionLevel=='level_1') { %>
            <div class="tl">
                <span style="color:#8fc31f;"><%= threeDaysData[j].Pollution %></span>
            </div>
            <% }  %>
            <% if (threeDaysData[j].PollutionLevel=='level_2') { %>
            <div class="tl">
                <span style="color:#d7af0e;"><%= threeDaysData[j].Pollution %></span>
            </div>
            <% }  %>
            <% if (threeDaysData[j].PollutionLevel=='level_3') { %>
            <div class="tl">
                <span style="color:#f39800;"><%= threeDaysData[j].Pollution %></span>
            </div>
            <% }  %>
            <% if (threeDaysData[j].PollutionLevel=='level_4') { %>
            <div class="tl">
                <span style="color:#e2361a;"><%= threeDaysData[j].Pollution %></span>
            </div>
            <% }  %>
            <% if (threeDaysData[j].PollutionLevel=='level_5') { %>
            <div class="tl">
                <span style="color:#5f52a0;" ><%= threeDaysData[j].Pollution %></span>
            </div>
            <% }  %>
            <% if (threeDaysData[j].PollutionLevel=='level_6') { %>
            <div class="tl">
                <span style="color:#631541;"><%= threeDaysData[j].Pollution %></span>
            </div>
            <% }  %>
        </div>
        <% } %>
    </div>
    <div class="tl">
        <div style="color:#9d9d9d;" class="font-22"><%= todaystr %></div>
        <img src="<%= todayOneData.imgUrl %>" style="width:50%;margin-top:10px;" alt="">
        <!-- <span style="color:#b0b0b0;font-size:13px;"><%= todayOneData.type %></span> -->
        <div class="f5" style="margin-top:15px;"><%= todayOneData.text %></div>
    </div>
</body>

</html>